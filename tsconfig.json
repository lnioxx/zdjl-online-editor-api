{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    // "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    // "downlevelIteration": true,
    // "noEmitHelpers": true,
    "declarationDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    // "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
